<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:minWidth="168dp"
    android:minHeight="168dp"
    tools:ignore="RtlSymmetry,UnusedAttribute,ContentDescription">

    <mobi.zapzap.mediapicker.widget.SquareImageView
        android:id="@+id/img_album_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <LinearLayout
        android:id="@+id/media_bucket_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_50_alpha"
        android:clipToPadding="false"
        android:minHeight="45dp"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_view_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="top"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="@tools:sample/cities"/>

        <TextView
            android:id="@+id/txt_album_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="@tools:sample/date/ddmmyy"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_album_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/media_bucket_info_container"
        app:layout_constraintTop_toTopOf="@+id/media_bucket_info_container"
        app:srcCompat="@drawable/ic_folder"/>

</android.support.constraint.ConstraintLayout>
